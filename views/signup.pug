doctype html
html.light-style.customizer-hide(lang='en', dir='ltr', data-theme='theme-default', data-assets-path='/assets/', data-template='vertical-menu-template-free')
  head
    title Puzzlebook Creator Signup page
    include _pages_head
  body
    // Content
    .container-xxl
      .authentication-wrapper.authentication-basic.container-p-y
        .authentication-inner
          // Register Card
          .card
            .card-body
              // Logo
              .app-brand.justify-content-center
                a.app-brand-link.gap-2(href='index.html')
                  span.app-brand-logo.demo
                    img.img-fluid(src='/homepage/images/logo.png', alt='logo')
              // /Logo
              h4.mb-2 Puzzlebook creator online boarding! &#x1F680;
              p.mb-4 visit the puzzle catalog page!
              form.mb-3
                .mb-3
                  label.form-label(for='username') Username
                  input#inputName.form-control(type='text', name='username', placeholder='Enter your username', autofocus='')
                .mb-3
                  label.form-label(for='email') Email
                  input#inputEmail.form-control(type='text', name='email', placeholder='Enter your email')
                .mb-3.form-password-toggle
                  label.form-label(for='password') Password
                  .input-group.input-group-merge
                    input#inputPW.form-control(type='password', name='password', placeholder='············', aria-describedby='password')
                    span.input-group-text.cursor-pointer
                      i.bx.bx-hide
                .mb-3.form-password-toggle
                  label.form-label(for='passwordConfirm') Password Confirm
                  .input-group.input-group-merge
                    input#inputPWConfirm.form-control(type='password', name='password confirm', placeholder='············', aria-describedby='password confirm')
                    span.input-group-text.cursor-pointer
                      i.bx.bx-hide      
                .mb-3
                  .form-check
                    input#terms-conditions.form-check-input(type='checkbox', name='terms')
                    label.form-check-label(for='terms-conditions')
                      | I agree to 
                      a(href='javascript:void(0);') privacy policy &amp; terms
                button#signup_btn.btn.btn-primary.d-grid.w-100 Sign up

                p.text-center
                  br
                  span or
                a#social_signup_btn.btn.btn-danger.d-grid.w-100(href='/users/gplus-auth') Sign up with google
              p.text-center
                span Already have an account?
                a(href='/login')
                  span Sign in instead
              p#error.text-center.hidden
                span please fill out all the above inputs! 
              p#signUpMessages.text-center
                span
                                             
    script(src='https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js')
    script(src="/js/signup.js") 
    include _scripts